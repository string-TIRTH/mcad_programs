<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".p12_calculator"
    android:orientation="vertical"
    >

    <!-- Create an application that will accept number from one EditText view. Display the sum
using TextView when sum button is pressed, clear the text from the EditText when clear
button is pressed and add new number to the last sum when Add button is pressed. -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Practical 12"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#FFA000"
        ></TextView>
    <EditText
        android:id="@+id/number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter number"
        android:layout_marginTop="20dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:gravity="center"
        android:background="#00FFFF"
        android:textSize="30dp"
        android:textColorHint="#000000"
        ></EditText>
    <TextView
        android:id="@+id/sum_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Sum = 0"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#FFA000"
        ></TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <Button
            android:id="@+id/add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="ADD"
            android:onClick="add_num"
            ></Button>
        <Button
            android:id="@+id/clear_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:onClick="clear_tv"
            android:text="Clear"></Button>
    </LinearLayout>
</LinearLayout>